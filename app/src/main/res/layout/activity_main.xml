<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context=".MainActivity">




    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/cardvieworder"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User!"
        android:textColor="@color/pureRed"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/welcome"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"

        android:id="@+id/cho"
        android:textColor="@color/teal500"
        android:text="Please select your choice!"
        />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:hint="Search Book"
            style="@style/EditTextStyle"
            android:layout_below="@+id/cho"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_below="@+id/search"
            android:background="#1E88E5"
            android:text="Login In" />


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/userProf"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/search"
        android:background="#1E88E5"
        android:text="User Profile" />


    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_toLeftOf="@+id/login"
        android:visibility="invisible"

        android:layout_marginTop="36dp"
        android:background="#1E88E5"
        android:text="Sign Up" />
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_toLeftOf="@+id/login"
        android:visibility="invisible"

        android:layout_marginTop="36dp"
        android:background="#1E88E5"
        android:text="Sign Out" />

</RelativeLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>
