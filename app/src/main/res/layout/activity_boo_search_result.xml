<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="library.app.com.libraryonyourfingertips.BooSearchResult">
<RelativeLayout
    android:layout_width="fill_parent"
    android:id="@+id/container"


    android:layout_height="fill_parent">

    <EditText
        android:hint="Search Books"
        android:layout_width="fill_parent"
        android:id="@+id/searchEdit"
        android:layout_height="wrap_content" />


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/booklist"
        android:dividerHeight="-1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_below="@+id/sp"
        >


        </ListView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/searchEdit"
    android:id="@+id/sp"
    android:gravity="center"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Search By :  "
        android:gravity="center"

        android:textSize="13dp"
        android:textColor="@color/material_blue_grey_950"
        android:id="@+id/txt"
        android:layout_alignParentLeft="true"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:layout_toRightOf="@+id/txt"

        android:layout_centerHorizontal="true" />
</RelativeLayout>

</RelativeLayout>
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        wheel:barColor="@color/pureRed"
        wheel:progressIndeterminate="true"
        android:layout_gravity="center_horizontal|bottom"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
